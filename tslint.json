{
  "extends": "tslint:latest",
  "rules": {
    "semicolon": [true, "always"],
    "quotemark": [true, "single"],
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [true, {
      "multiline": "never",
      "singleline": "never"
    }],
    "no-namespace": [true, "allow-declarations"],
    "whitespace": [false, "check-type"]
  }
}
